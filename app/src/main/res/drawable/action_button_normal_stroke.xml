<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1.5dp" android:color="@color/dark_green" />
            <corners android:radius="@dimen/_5sdp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <stroke android:width="1.5dp" android:color="@color/mid_dark_grey" />
            <corners android:radius="@dimen/_5sdp" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="1.5dp" android:color="@color/ramani_green" />
            <corners android:radius="@dimen/_5sdp" />
        </shape>
    </item>
</selector>