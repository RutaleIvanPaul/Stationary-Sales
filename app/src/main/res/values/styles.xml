<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="BoldTextView">
        <item name="font">@font/raleway_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Common Styles -->

    <style name="NormalTextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="WhiteTextLabel" parent="NormalTextLabel">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BoldTextLabel" parent="NormalTextLabel">
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="BoldTextSmallLabel" parent="BoldTextLabel">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SmallTextLabel" parent="NormalTextLabel">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TinyTextLabel" parent="NormalTextLabel">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="LargeTextLabel" parent="NormalTextLabel">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/raleway_bold</item>
    </style>

    <style name="NormalButton" parent="NormalTextLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="CircleActionButton">
        <item name="android:layout_width">27dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/circle_button_green</item>
    </style>

    <style name="CircleActionBlueButton" parent="CircleActionButton">
        <item name="android:background">@drawable/circle_button_blue</item>
    </style>

    <style name="CircleActionButtonLight">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/circle_button_light_blue</item>
    </style>

    <style name="NormalCardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="NextButton">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:src">@drawable/ic_next</item>
        <item name="android:tint">@color/ramani_blue</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ListItemTextLabel" parent="NormalTextLabel">
        <item name="android:textColor">@color/colorNavTextGrey</item>
    </style>

    <style name="ListItemTextValue" parent="NormalTextLabel">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchView">
        <item name="font">@font/raleway_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:icon">@color/gloss_red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Home -->

    <style name="TapToViewButton" parent="TinyTextLabel">
        <item name="android:textColor">@color/ramani_green</item>
        <item name="android:text">@string/tap_to_view</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="BottomNavIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="BottomNavText" parent="NormalTextLabel">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorNavTextGrey</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>


</resources>