<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="BoldTextView">
        <item name="font">@font/raleway_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Common Styles -->

    <style name="NormalTextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="WhiteTextLabel" parent="NormalTextLabel">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BoldTextLabel" parent="NormalTextLabel">
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="BoldTextSmallLabel" parent="BoldTextLabel">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BoldLargeTextLabel" parent="BoldTextLabel">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BoldHugeTextLabel" parent="BoldTextLabel">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallTextLabel" parent="NormalTextLabel">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TinyTextLabel" parent="NormalTextLabel">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="LargeTextLabel" parent="NormalTextLabel">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/raleway_bold</item>
    </style>

    <style name="NormalButton" parent="NormalTextLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="NormalActionButton" parent="LargeTextLabel">
        <item name="android:layout_width">106dp</item>
        <item name="android:height">38dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/action_button_normal</item>
    </style>

    <style name="GreyActionButton" parent="NormalActionButton">
        <item name="android:background">@drawable/action_button_grey</item>
    </style>

    <style name="CircleActionButton">
        <item name="android:layout_width">27dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/circle_button_green</item>
    </style>

    <style name="CircleActionBlueButton" parent="CircleActionButton">
        <item name="android:background">@drawable/circle_button_blue</item>
    </style>

    <style name="CircleActionButtonLight">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/circle_button_light_blue</item>
    </style>

    <style name="NormalCardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="NextButton">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:src">@drawable/ic_next</item>
        <item name="android:tint">@color/ramani_blue</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ListItemTextLabel" parent="NormalTextLabel">
        <item name="android:textColor">@color/colorNavTextGrey</item>
    </style>

    <style name="ListItemTextValue" parent="NormalTextLabel">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchView">
        <item name="font">@font/raleway_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:icon">@color/gloss_red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    <style name="CalendarButton" parent="@style/LargeTextLabel">
        <item name="android:drawableStart">@drawable/ic_calendar</item>
        <item name="android:text">30 Jan 2022</item>
        <item name="android:background">@drawable/rounded_rectangle_grey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="RefreshButton" parent="@style/NormalTextLabel">
        <item name="android:drawableStart">@drawable/ic_refresh</item>
        <item name="android:foregroundTint">@color/light_grey</item>
        <item name="android:text">@string/refresh</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">@color/mid_dark_grey</item>
    </style>

    <style name="NormalTextField" parent="NormalTextLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rounded_rectangle_grey</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textColorHint">@color/colorNavTextGrey</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SearchTextField" parent="NormalTextField">
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textColorHint">@color/colorNavTextGrey</item>
    </style>

    <style name="RightSearchTextField" parent="NormalTextField">
        <item name="android:drawableEnd">@mipmap/ic_search_circle</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">@color/colorNavTextGrey</item>
    </style>

    <!-- Home -->

    <style name="TapToViewButton" parent="TinyTextLabel">
        <item name="android:textColor">@color/ramani_green</item>
        <item name="android:text">@string/tap_to_view</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="BottomNavIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="BottomNavText" parent="NormalTextLabel">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorNavTextGrey</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <!-- Create Order -->
    <style name="PlusActionButton" parent="NormalActionButton">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_plus</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="MinusActionButton" parent="PlusActionButton">
        <item name="android:src">@drawable/ic_minus</item>
    </style>

    <style name="DropDownButton" parent="RightSearchTextField">
        <item name="android:layout_height">35dp</item>
        <item name="android:drawableEnd">@mipmap/ic_dropdown</item>
    </style>

    <style name="CustomSpinner" parent="NormalTextLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/rounded_rectangle_grey</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="spinner_arrow_gravity">end</item>
        <item name="spinner_arrow_padding">5dp</item>
        <item name="spinner_arrow_show">true</item>
        <item name="spinner_arrow_tint">@color/ramani_green</item>
        <item name="spinner_divider_color">@color/dark_grey</item>
        <item name="spinner_divider_show">true</item>
        <item name="spinner_divider_size">0.4dp</item>
        <item name="spinner_popup_animation">dropdown</item>
        <item name="spinner_popup_background">@color/light_grey</item>
        <item name="spinner_popup_elevation">14dp</item>
    </style>

</resources>