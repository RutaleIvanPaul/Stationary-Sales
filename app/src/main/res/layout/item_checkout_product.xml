<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_checkout_product_delete_button"
        style="@style/DeleteButton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/rounded_rectangle_grey_fill"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="20dp"
        android:paddingEnd="15dp"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_checkout_product_name"
                style="@style/BoldTextLabel"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/item_checkout_product_price"
                android:text="Natural orange juice 1L" />

            <TextView
                android:id="@+id/item_checkout_product_price"
                style="@style/BoldTextLabel"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="35,000 TSh"
                android:textColor="@color/ramani_green" />
        </RelativeLayout>

        <!-- Quantity -->

        <LinearLayout
            android:id="@+id/item_checkout_product_quantity_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_rectangle_small_radius"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/CheckoutPropertyItem"
                android:text="@string/qty" />

            <TextView
                android:id="@+id/item_checkout_product_quantity"
                style="@style/CheckoutPropertyItem"
                android:text="78 PC"
                android:textColor="@color/ramani_green" />

            <ImageView
                style="@style/NextButton"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Price Category -->

        <LinearLayout
            android:id="@+id/item_checkout_product_price_category_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/rounded_rectangle_small_radius"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/CheckoutPropertyItem"
                android:text="@string/price_category" />

            <TextView
                android:id="@+id/item_checkout_product_price_category"
                style="@style/CheckoutPropertyItem"
                android:text="@string/standard_price"
                android:textColor="@color/ramani_green" />

            <ImageView
                style="@style/NextButton"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Discount -->

        <LinearLayout
            android:id="@+id/item_checkout_product_discount_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/rounded_rectangle_small_radius"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/CheckoutPropertyItem"
                android:text="@string/discount" />

            <TextView
                android:id="@+id/item_checkout_product_discount"
                style="@style/CheckoutPropertyItem"
                android:text="@string/no_discount"
                android:textColor="@color/ramani_green" />

            <ImageView
                style="@style/NextButton"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Rewards -->

        <LinearLayout
            android:id="@+id/item_checkout_product_rewards_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/rounded_rectangle_small_radius"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/CheckoutPropertyItem"
                android:text="@string/rewards" />

            <TextView
                android:id="@+id/item_checkout_product_rewards"
                style="@style/CheckoutPropertyItem"
                android:text="@string/no_reward"
                android:textColor="@color/ramani_green" />

            <ImageView
                style="@style/NextButton"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>