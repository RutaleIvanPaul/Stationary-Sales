<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="347dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_rectangle"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <TextView
            android:id="@+id/dialog_checkout_price_category_title"
            style="@style/BoldLargeTextLabel"
            android:layout_alignParentTop="true"
            android:text="@string/price_category" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialog_checkout_price_category_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/dialog_checkout_price_category_title"
            android:nestedScrollingEnabled="false"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/dialog_checkout_price_category_okay"
            style="@style/NormalActionButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:text="@string/okay" />
    </RelativeLayout>
</LinearLayout>